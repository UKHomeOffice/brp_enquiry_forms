{
  "name": "BRP",
  "version": "0.0.0",
  "main": "app.js",
  "description": "A Home Office application for Biometric Residence Permit covering lost and stolen, error on card and delivery error services.",
  "license": "GPL-2.0",
  "scripts": {
    "start": "node .",
    "dev": "NODE_ENV=development hof-build watch",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint .",
    "test:unit": "NODE_ENV=test istanbul cover _mocha ./test",
    "test:acceptance": "npm run test:acceptance:new && npm run test:acceptance:old",
    "test:acceptance:new": "funkie so-acceptance --steps",
    "test:acceptance:old": "cd acceptance_tests/; bundle install && cucumber",
    "quality": "plato -r -x 'node_modules|reports|test' -d reports/plato .",
    "build": "hof-build",
    "postinstall": "npm run build"
  },
  "author": "HomeOffice",
  "dependencies": {
    "churchill": "0.1.0",
    "express": "^4.17.1",
    "hof": "^13.2.2",
    "hof-build": "^1.6.0",
    "hof-component-date": "^1.4.0",
    "hof-model": "^3.1.2",
    "hof-template-mixins": "4.2.0",
    "hof-theme-govuk": "^2.0.4",
    "hogan.js": "^3.0.2",
    "hot-shots": "^5.9.2",
    "i18n-future": "^1.1.0",
    "jquery": "^3.6.0",
    "moment": "^2.29.1",
    "moment-business": "^2.0.0",
    "nodemailer": "^2.7.0",
    "nodemailer-ses-transport": "^1.5.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "nodemailer-stub-transport": "^1.1.0",
    "snyk": "^1.592.0",
    "typeahead-aria": "^1.0.4",
    "underscore": "^1.13.1",
    "winston": "^1.1.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "debug": "^2.6.9",
    "eslint": "^4.19.1",
    "eslint-config-homeoffice": "^2.2.0",
    "funkie": "0.0.6",
    "funkie-phantom": "0.0.1",
    "hof-form-controller": "^5.1.0",
    "hof-util-reqres": "^1.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^2.5.3",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi": "^0.7.2",
    "mocha-sandbox": "^1.0.0",
    "parallelshell": "^1.2.0",
    "plato": "^1.7.0",
    "pre-commit": "^1.2.2",
    "proxyquire": "^1.8.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.14.0",
    "so-acceptance": "^4.3.3"
  },
  "pre-commit": [
    "test"
  ],
  "snyk": true
}
